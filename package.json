{
  "name": "mm",
  "version": "0.0.0",
  "description": "parse markdown",
  "license": "MIT",
  "keywords": [],
  "repository": "micromark/mm",
  "bugs": "https://github.com/micromark/mm/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "lib/",
    "buffer.js",
    "stream.js",
    "index.js"
  ],
  "dependencies": {
    "once": "^1.4.0",
    "parse-entities": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "concat-stream": "^2.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "regenerate": "^1.4.0",
    "remark-cli": "^8.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "tape": "^5.0.0",
    "tinyify": "^2.0.0",
    "unassertify": "^2.0.0",
    "unicode-13.0.0": "^0.8.0",
    "xo": "^0.30.0"
  },
  "scripts": {
    "generate-expressions": "node script/generate-expressions",
    "generate": "npm run generate-expressions",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-buffer": "browserify . -s micromark -t unassertify -p tinyify > micromark-buffer.min.js",
    "build-stream": "browserify lib/stream -s micromark -t unassertify -p tinyify > micromark-stream.min.js",
    "build": "npm run build-buffer && npm run build-stream",
    "postbuild": "echo \"buffer: $(gzip-size micromark-buffer.min.js), stream: $(gzip-size micromark-stream.min.js)\"",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run generate && npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/no-hex-escape": "off",
      "unicorn/prefer-reflect-apply": "off",
      "unicorn/prefer-number-properties": "off",
      "import/no-unassigned-import": "off",
      "capitalized-comments": "off",
      "no-lonely-if": "off",
      "no-self-compare": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
